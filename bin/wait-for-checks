#!/usr/bin/env bash
#/ Usage: wait-for-checks [-t|--timeout <TIMEOUT>]
#/
#/ Options:
#/   -t|--timeout <TIMEOUT>   Wait <TIMEOUT> seconds for checks to go green (default is 300, 5 minutes)

usage() {
  cat "$0" | grep "^#/" | cut -c4-
}

timeout=300
while [[ $# -gt 0 ]]; do
  key="$1"
  shift

  case "$key" in
    -t|--timeout)
      timeout="$1"
      shift
      ;;
    -h|--help)
      usage
      exit 0
      ;;
  esac
done

echo "Waiting $timeout seconds for PR checks to complete..."

counter=0
while [[ $counter -lt $timeout ]]; do
  if gh pr checks >/dev/null 2>&1; then
    echo "Checks have completed!"
    notify "🏁 Your build is finished! 🏁"
    exit 0
  fi
  sleep 1

  counter=$((counter + 1))
done

echo "Checks did not complete after $timeout seconds"
exit 1