[include]
    path = "~/.gitauthor"

[core]
    autocrlf = false
    excludesfile = "~/.dotfiles/git/gitignore"
    editor = code --wait

	compression = 0
[color]
    ui = true

[alias]
    st = status -s
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --decorate --oneline dev HEAD -n 20
    who = shortlog -s --
    k = !gitk
    cl = clean -d

    p = push --set-upstream origin
    pi = push internal
    pp = push public
    pf = push --force-with-lease origin
    pfi = push --force-with-lease internal
    pfp = push --force-with-lease public
    pff = push --force origin
    pffi = push --force internal
    pffp = push --force public
    pd = push --delete origin
    pdi = push --delete internal
    pdp = push --delete public
    pl = pull origin
    pli = pull internal
    plu = pull upstream
    f = fetch origin
    fi = fetch internal
    fp = fetch public

    fiddle = config --global http.proxy 127.0.0.1:8888
    unfiddle = config --global --unset
    addall = add -A :/

    outgoing = log @{u}..
    out = log @{u}..
    incoming = log ..@{u}
    in = log ..@{u}

    mine = !git branch -a | grep anurse

[push]
    default = simple

[pull]
    default = simple
    rebase = true

[diff]
    algorithm = patience
    tool = vscode

[merge]
    tool = MERGETOOL

[difftool "winmerge"]
    cmd = "winmergeu" -u -e "$LOCAL" "$REMOTE"

[difftool "p4merge"]
    cmd = "p4merge" "$LOCAL" "$REMOTE"

[difftool "vscode"]
    cmd = "code --wait --diff $LOCAL $REMOTE"

[difftool "vsdiffmerge"]
      cmd = '"%VSINSTALLDIR%Common7/IDE/vsdiffmerge.exe"' "$LOCAL" "$REMOTE" //t
      keepbackup = false
      trustexistcode = true

[mergetool "vsdiffmerge"]
      cmd = '"%VSINSTALLDIR%Common7/IDE/vsdiffmerge.exe"' "$REMOTE" "$LOCAL" "$BASE" "$MERGED" //m
      keepbackup = false
      trustexistcode = true

[mergetool "p4merge"]
    cmd = "p4merge" "$BASE" "$LOCAL" "$REMOTE" "$MERGED"

[mergetool "winmerge"]
    cmd = "winmergeu" -u -e -dl \"Local\" -dr \"Remote\" "$LOCAL" "$REMOTE" "$MERGED"

[http]
	postBuffer = 1048576000
	maxRequestBuffer = 100M
[github]
	user = anurse
[credential]
	helper = osxkeychain
